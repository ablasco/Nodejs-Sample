col-green = #AAFF00
col-gray  = #BABABA
fnt-default = "Trebuchet MS", Arial, Helvetica, sans-serif


/* Generic styles */
.hidden
  display none

body
  margin 0
  padding 0
  background #000 url(../images/img12.jpg) repeat top left
  text-align justify
  font 13px fnt-default
  color #7F7772

form
  margin 0
  padding 0

fieldset
  margin 0
  padding 0
  border none

label, input, textarea
  margin-bottom 1em

input, textarea
  padding 5px
  border 1px solid #626262
  font normal 1em fnt-default

h1, h1 a, h2, h2 a, h3, h3 a
  margin 0
  text-decoration none
  font-weight normal
  color col-green

h1
  letter-spacing -3px
  font-size 2.6em

h2
  letter-spacing -2px
  font-size 2em

h3
  margin-bottom 2em
  font-size 1em
  font-weight bold

p, ol, ul
  margin 0 0 2em 0
  line-height 200%

blockquote
  margin 0 0 0 1.5em
  padding-left 1em
  border-left 5px solid col-gray

a
  color col-green
  &:hover
    text-decoration none
    color #FFF

img
  border none
  &.left
    float left
    margin 8px 20px 0 0
    border 2px solid #434343



/* Header */

#wrapper
  background url(../images/img14.jpg) no-repeat center top

#header
  width 900px
  height 128px
  margin 0 auto

#logo
  h1, p
    float left
    color col-green
  h1
    height 88px
    padding 20px 90px 0 0
    font-size 4em
  p
    margin 0 0 0 -80px
    padding 55px 0 0 0
    line-height normal
    letter-spacing -1px
    font-size 1.2em
    font-weight bold
  a
    color col-green
    text-decoration none
    font-weight bold



/* RSS */

#rss
  padding 30px 39px 20px 0
  text-align right
  a
    padding 0 0 3px 24px
    background url(../images/img03.gif) no-repeat
    text-decoration none
    font-weight bold
    &:hover
      text-decoration underline



/* Search */

#search
  float right
  width 200px
  height 28px
  background #FFF url(../images/img02.gif) no-repeat
  #x
    display none
  #s
    padding 6px 5px 5px 35px
    width 160px
    height auto
    background none
    border none
    font normal 1em Arial, Helvetica, sans-serif
    color #000
  br
    display none



/* Menu */

#menu
  width 950px
  height 60px
  margin 0 auto
  background #6AA2FD url(../images/img04.gif)
  ul
    margin 0
    padding 0
    list-style none
  li
    display inline
    text-transform uppercase
  a
    display block
    float left
    background url(../images/img15.gif) no-repeat right 100%
    padding 18px 30px 0 30px
    text-decoration none
    font bold 1em Arial, Helvetica, sans-serif
    color #FFF
    &:hover
      height 60px
      background url(../images/img16.gif) repeat-x right 30%
      color #000
  .current_page_item
    a
      color col-green



/* Page */

#page
  width 890px
  margin 0 auto
  padding 30px 0



/* Ads */

#ads
  float right
  width 160px
  padding 0 0 0 20px



/* Content */

#content
  float left
  width 430px

#content-header
  img, h2, h3
    display block
    float left
    width 275px
    margin-top 15px
  img
    width auto
    margin 0 2em 3em 0
    border 2px solid col-gray

#notification-list
  clear both
  div
    margin-bottom 1em

.post
  clear both
  margin-bottom 50px
  .title, .links
    background #F3F3F3 url(../images/img08.gif) no-repeat
  .title
    h2
      font-size 2.2em
    p
      margin 0
      padding 5px 5px 5px 30px
      font-size 10px
      line-height normal
      color col-gray
      background url(../images/img10.gif) 7px 7px no-repeat
      a
        color col-gray
  .entry
    padding-top 15px
  .links
    width 410px
    height 29px
    margin 0
    padding 6px 0 0 20px
    a
      padding 0 23px
      text-decoration none
      font-weight bold
      &:hover
        text-decoration underline
    .more
      background url(../images/img09.gif) no-repeat
    .comments
      background url(../images/img10.gif) no-repeat
    .edit
      background url(../images/btn-edit.png) no-repeat
    .delete
      background url(../images/btn-delete.png) no-repeat

#new-fact-form
  display none
  textarea, label
    display block
    width 100%

#dialog-confirm
  display none

/* Sidebar */

#sidebar
  float right
  width 240px
  ul
    margin 0
    padding 0
    list-style none
  li
    margin-bottom 20px
    ul
      padding 15px 20px
      line-height 200%
    li
      margin 0
      padding-left 15px
      background url(../images/img07.gif) no-repeat 0 11px
  h2
    width 210px
    height 30px
    padding 5px 0 0 30px
    background #FFB700 url(../images/img05.gif)
    letter-spacing -1px
    font-size 1.6em
    color #FFF



/* Footer */

#footer
  clear both
  width 950px
  margin 0 auto
  padding 30px 0
  background url(../images/img11.gif) no-repeat
  p
    margin 0 0 5px 0
    text-align center
    line-height normal
    font-size .9em
  a
    text-decoration none
